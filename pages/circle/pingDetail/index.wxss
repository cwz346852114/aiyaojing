.bgImg {
  background: url('https://admin.ayjpet.com/attachment/images/22/2019/09/znm42T3T9cz3ec1Ce3e39aNMDNT32h.png') no-repeat;
  background-size: 100%;
  margin-bottom: 20rpx;
  width: 100%;
  padding-top: 20rpx;
}
.title {
  margin-top: 20rpx;
  background: #FDF8DB;
  padding: 30rpx 20rpx 30rpx 40rpx;
  display: flex;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}
.title .left {
  flex: 1;
  color: black;
  font-size: 30rpx;
  font-weight: bold;
}
.content {
  position: relative;
}
.content .shen {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  height: 38rpx;
  width: 38rpx;
}
.content .list {
  border-bottom: 1px solid #f2f2f2;
  background: white;
}
.content .list .pinlun {
  display: flex;
  padding: 16rpx 20rpx 16rpx 39rpx;
}
.content .list .pinlun .one {
  flex: 1;
}
.content .list .pinlun .one image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.content .list .pinlun .two {
  flex: 6;
}
.content .list .pinlun .two .top {
  font-size: 26rpx;
  font-weight: bold;
}
.content .list .pinlun .two .di {
  font-size: 22rpx;
  color: #999999;
  margin-top: 9rpx;
}
.content .list .pinlun .three {
  flex: 1;
  line-height: 46rpx;
}
.content .list .pinlun .three image {
  width: 33rpx;
  height: 33rpx;
  vertical-align: middle;
}
.content .list .pinlun .three text {
  vertical-align: middle;
  font-size: 24rpx;
  color: #FC4056;
}
.content .list .pinlun .four {
  flex: 1;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  line-height: 64rpx;
}
.content .list .pinlun .four image {
  width: 33rpx;
  height: 33rpx;
}
.content .list .text {
  margin-left: 123rpx;
}
.content .list .text .biaoti {
  font-size: 26rpx;
  margin-bottom: 35rpx;
}
.content .list .text image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10px;
}
.footer {
  border-top: 1px solid #f2f2f2;
  width: 100%;
  padding: 21rpx 20rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: white;
}
.footer image {
  width: 60rpx;
  height: 60rpx;
}
.footer .inp {
  border-radius: 50rpx;
  display: inline-block;
  width: 450rpx;
  height: 56rpx;
  padding-left: 30rpx;
  background: #f2f2f2;
}
.footer .fabu {
  display: inline-block;
  width: 120rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  background: yellow;
  border: 1px solid black;
  border-radius: 30rpx;
  vertical-align: top;
  padding: 0rpx 10rpx;
  margin: 0rpx 20rpx;
}
.footer .pla {
  font-size: 26rpx;
  margin-left: 20rpx;
}
