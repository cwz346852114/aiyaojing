.bgImg {
  background: url('https://admin.ayjpet.com/attachment/images/22/2019/09/znm42T3T9cz3ec1Ce3e39aNMDNT32h.png') no-repeat;
  background-size: 100%;
  margin-bottom: 20rpx;
  width: 100%;
  padding-top: 20rpx;
}
.bgImg .head {
  display: flex;
  width: 670rpx;
  margin-left: 20rpx;
  background: white;
  border-radius: 30rpx;
  padding: 20rpx;
}
.bgImg .head .left {
  flex: 1;
}
.bgImg .head .left image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
}
.bgImg .head .neirong {
  font-size: 26rpx;
  line-height: 82rpx;
  font-weight: bold;
  flex: 3;
}
.bgImg .head .right {
  border-bottom: 1px solid #f2f2f2;
  flex: 1;
  font-size: 22rpx;
  line-height: 80rpx;
  background: white;
  text-align: center;
}
.bgImg .head .right text {
  display: inline-block;
  border: 1.5px solid black;
  line-height: 48rpx;
  width: 120rpx;
  border-radius: 30rpx;
}
.bgImg .title {
  margin-top: 20rpx;
  background: #FDF8DB;
  padding: 30rpx 20rpx 30rpx 40rpx;
  display: flex;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}
.bgImg .title .left {
  flex: 1;
  color: black;
  font-size: 30rpx;
  font-weight: bold;
}
.bgImg .title .right {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  width: 100%;
  text-align: right;
}
.bgImg .title .right .add text {
  font-size: 26rpx;
  color: #666666;
  vertical-align: middle;
}
.bgImg .title .right .add image {
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
}
.content {
  position: relative;
}
.content .shen {
