.bgImg {
  background: url('https://admin.ayjpet.com/attachment/images/22/2019/09/znm42T3T9cz3ec1Ce3e39aNMDNT32h.png') no-repeat;
  background-size: 100%;
  margin-bottom: 20rpx;
  width: 100%;
  height: 188rpx;
}
.bgImg .my_box {
  width: 710rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
  background: white;
  margin-top: 20rpx;
}
.bgImg .my_box .content .flex {
  display: flex;
  padding: 20rpx 20rpx 10rpx;
  border-bottom: 1px solid #f2f2f2;
}
.bgImg .my_box .content .flex .left {
  flex: 1;
}
.bgImg .my_box .content .flex .left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.bgImg .my_box .content .flex .center {
  flex: 5;
  font-size: 28rpx;
  line-height: 80rpx;
}
.bgImg .my_box .content .flex .center view {
  height: 30rpx;
}
.bgImg .my_box .content .flex .center .shang {
  font-size: 28rpx;
  margin-top: -20rpx;
}
.bgImg .my_box .content .flex .center .xia {
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}
.bgImg .my_box .content .flex .right {
  flex: 1;
  font-size: 22rpx;
  line-height: 80rpx;
  background: white;
  text-align: center;
}
.bgImg .my_box .content .flex .right text {
  display: inline-block;
  font-weight: bold;
  border: 1.5px solid black;
  line-height: 48rpx;
  width: 120rpx;
  border-radius: 30rpx;
}
